{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"noImplicitAny": true,
		"checkJs": true,
		"allowJs": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules/",
		"dist/",
		"**/*.test.js"
	]
}
