{
	"name": "@kirick/snowflake",
	"version": "0.2.2-beta.2",
	"description": "Easy-to-use generator of unique & sortable IDs.",
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"main": "src/main.js",
	"types": "types/main.d.ts",
	"exports": {
		".": {
			"import": {
				"browser": "./dist/browser/esm/snowflake.js",
				"default": "./src/main.js"
			},
			"require": "./dist/main.cjs"
		}
	},
	"engines": {
		"node": ">=10.4.0"
	},
	"dependencies": {
		"base-x": "4.0.0"
	},
	"devDependencies": {
		"@babel/eslint-parser": "7.21.8",
		"@types/node": "^20.14.9",
		"eslint": "8.41.0",
		"eslint-config-xo": "0.43.1",
		"eslint-plugin-import": "2.27.5",
		"eslint-plugin-jsdoc": "46.5.0",
		"eslint-plugin-node": "11.1.0",
		"eslint-plugin-promise": "6.1.1",
		"eslint-plugin-unicorn": "47.0.0",
		"vitest": "^1.6"
	},
	"scripts": {
		"test": "npm run test:vitest && bun test --coverage",
		"test:vitest": "vitest run --no-file-parallelism",
		"build": "bun run build:types && bun run build:cjs && bun run build:browser:minified",
		"build:browser:minified": "bun build --target browser --format esm --minify --outfile dist/browser/esm/snowflake.js src/main.js",
		"build:cjs": "bunx esbuild --bundle --platform=node --format=cjs --packages=external --outfile=dist/main.cjs src/main.js",
		"build:types": "bunx tsc --skipLibCheck --declaration --emitDeclarationOnly --outDir types",
		"lint": "eslint . && bunx tsc --skipLibCheck --noemit",
		"publish:npm": "bun run lint && bun run build && bun run test && npm publish",
		"publish:npm:beta": "bun run publish:npm --tag beta"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/kirick13/snowflake-js.git"
	},
	"keywords": [
		"snowflake",
		"uuid",
		"uid"
	],
	"author": "Daniil Kirichenko (https://twitter.com/kirickme)",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/kirick13/snowflake-js/issues"
	},
	"homepage": "https://github.com/kirick13/snowflake-js#readme"
}
