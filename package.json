{
	"name": "@kirick/snowflake",
	"version": "0.2.0-beta.3",
	"description": "Easy-to-use generator of unique & sortable IDs.",
	"publishConfig": {
		"access": "public"
	},
	"main": "src/main.js",
	"type": "module",
	"exports": {
		".": {
			"import": {
				"browser": "./dist/browser/esm/snowflake.js",
				"default": "./src/main.js"
			},
			"require": "./dist/snowflake.cjs"
		}
	},
	"engines": {
		"node": ">=10.4.0"
	},
	"dependencies": {
		"base-x": "4.0.0"
	},
	"devDependencies": {
		"@babel/eslint-parser": "7.21.8",
		"eslint": "8.41.0",
		"eslint-config-xo": "0.43.1",
		"eslint-plugin-import": "2.27.5",
		"eslint-plugin-node": "11.1.0",
		"eslint-plugin-promise": "6.1.1",
		"eslint-plugin-unicorn": "47.0.0",
		"jest": "^29.7.0"
	},
	"scripts": {
		"test": "npm run test-node && bun test",
		"test-node": "NODE_OPTIONS=--experimental-vm-modules jest",
		"build": "bun run build-cjs && bun run build-browser-minified",
		"build-cjs": "bunx esbuild --bundle --platform=node --format=cjs --packages=external --outfile=dist/snowflake.cjs src/main.js",
		"build-browser-minified": "bun build --target browser --format esm --minify --outfile dist/browser/esm/snowflake.js src/main.js",
		"npm-publish": "bun run build && npm test && npm publish --tag beta"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/kirick13/snowflake-js.git"
	},
	"keywords": [
		"snowflake",
		"uuid",
		"uid"
	],
	"author": "Daniil Kirichenko (https://twitter.com/kirickme)",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/kirick13/snowflake-js/issues"
	},
	"homepage": "https://github.com/kirick13/snowflake-js#readme"
}
