{
	"name": "@kirick/snowflake",
	"version": "0.2.3",
	"description": "Generator of unique & sortable IDs.",
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"main": "dist/main.js",
	"types": "dist/main.d.ts",
	"exports": {
		".": {
			"import": "./dist/main.js",
			"require": "./dist/main.cjs"
		}
	},
	"engines": {
		"node": ">=14.13.1"
	},
	"dependencies": {
		"base-x": "^5.0"
	},
	"devDependencies": {
		"@kirick/eslint-config": "latest",
		"@types/bun": "^1.2.10",
		"@types/node": "^22.14.1",
		"eslint": "9.10.0",
		"tsdown": "^0.10.0",
		"typescript": "5.8.3",
		"vitest": "3.1.2"
	},
	"scripts": {
		"build": "tsdown src/main.ts --dts --format esm --format cjs --clean && rm dist/main.d.cts",
		"check": "bun run lint && bun run build && bun run test",
		"lint": "eslint . && bunx tsc --skipLibCheck --noemit",
		"test": "npm run test:vitest && bun test --coverage",
		"test:vitest": "vitest run --no-file-parallelism"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/kirick13/snowflake-js.git"
	},
	"keywords": [
		"snowflake",
		"uuid",
		"uid"
	],
	"author": "Daniil Kirichenko (https://twitter.com/kirickme)",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/kirick13/snowflake-js/issues"
	},
	"homepage": "https://github.com/kirick13/snowflake-js#readme"
}
